# AVT Service Environment Variables
# Copy this file to .env and fill in the values

# =============================================================================
# Database Configuration
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=telemetry_db
DB_USER=telemetry_user
DB_PASSWORD=your_secure_password_here

# Full database connection URL (alternative to individual settings above)
# DATABASE_URL=postgres://user:password@host:5432/dbname?sslmode=disable

# =============================================================================
# Server Configuration
# =============================================================================
PORT=8080

# =============================================================================
# JWT Authentication
# =============================================================================
# Secret key for signing JWT tokens (must be at least 32 characters)
# Generate with: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_here_at_least_32_characters

# Token expiration times (optional, defaults shown)
# JWT_ACCESS_TOKEN_TTL=15m
# JWT_REFRESH_TOKEN_TTL=168h

# =============================================================================
# Email Configuration (Mailgun)
# =============================================================================
# Set to "mailgun" to enable email functionality
EMAIL_PROVIDER=mailgun

# Your Mailgun domain (e.g., mail.example.com)
MAILGUN_DOMAIN=your_mailgun_domain

# Mailgun API key (starts with "key-" or for EU: from Mailgun dashboard)
MAILGUN_API_KEY=your_mailgun_api_key

# Email sender configuration
EMAIL_FROM_ADDRESS=noreply@example.com
EMAIL_FROM_NAME=AVT Service

# Your application URL (used in email links)
APP_URL=https://app.example.com

# Password reset token validity (default: 12h)
# RESET_TOKEN_TTL=12h